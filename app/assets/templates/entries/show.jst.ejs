<div class="row entdiv" id="show_header">
	<div class="col-xs-3">
		<% if (entry.user().has('m_url')) { %>
				<img id="entry-user-show-image" src="<%= entry.user().get('m_url') %>">
		<% } else { %>
				<img id="entry-user-show-image" src=<%= Diveloggr.defaultProfileImg %>>
		<% } %>
	</div>
	<div class="col-xs-9">
		<h1 id="entry-title"><%= entry.escape("title") %></h1>
		<h3><%= entry.escape("location_name") %></h3>
	</div>
</div>
<div class ="row entdiv">
	<div class="col-xs-3" id="user-link-button">
		<h3><%= entry.user().escape('fname') %> <%= entry.user().escape('lname') %></h3>
		<%= entry.user().escape('numdives') %> Dives
	</div>
</div>
<% if (CURRENT_USER_ID === entry.get("user_id")) { %>
	<div class="row">
		<div class="col-xs-12">
			<button class="entry-edit btn btn-success">Edit</button>
			<button class="entry-delete btn btn-danger">Delete</button>
		</div>
	</div>
<% }; %>
<div class="row" id="show_body">
	<h5>Dive Notes:</h5>
	<div class="interior_text_area">
		<%= entry.escape("body") %>
	</div>
</div>
<div class="row entdiv">
	<h2>Key Data<h2>
</div>
<div class="row" id="dive_base_info">
	<div class="col-xs-6">
		<center>
		<h3>Dive Number</h3>
		<h2><%= entry.escape("divenum") %></h2>
		</center>
		<dl class="dl-horizontal">
			<dt>Entry Date: </dt><dd><%= moment(entry.escape("entrydate")).format('dddd, MMMM Do YYYY') %></dd>
			<dt>Entry Time: </dt><dd><%= moment(entry.escape("entrytime")).format('h:mm a') %></dd>
			<dt>Location Name: </dt><dd><%= entry.escape("location_name") %></dd>
			<dt>Dive Type: </dt><dd><%= entry.escape("divetype") %></dd>
		</dl>
	</div>
	<div class="col-xs-6" id="map-container">
	</div>
</div>
<div class="row entdiv">
	<h2>Conditions</h2>
</div>
<div class="row" id="entry_conditions">
	<div class="col-xs-6">
		<h3>Surface Conditions</h3>
		<ul>
			<li>Weather: <%= entry.escape("weather") %></li>
			<li>Air Temp: <%= entry.escape("airtemp") %></li>
			<li>Surface: <%= entry.escape("surface") %></li>
		</ul>
	</div>
	<div class="col-xs-6">
		<h3>Underwater Conditions</h3>
		<ul>
			<li>Visibility: <%= entry.escape("vis") %></li>
			<li>Current: <%= entry.escape("current") %></li>
			<li>Water Temp: <%= entry.escape("watertemp") %></li>
		</ul>
	</div>
</div>
<div class="row entdiv">
	<h2>Dive Profile</h2>
</div>
<div class="row">
	<div class="col-xs-4" id="max_depth_box">
		<h5>MAX DEPTH<h5>
		<h1><%= entry.escape("maxdepth") %></h1>
	</div>
	<div class="col-xs-4" id="avg_depth_box">
		<h5>AVG DEPTH<h5>
		<h1><%= entry.escape("avgdepth") %></h1>
	</div>
	<div class="col-xs-4" id="divetime_depth_box">
		<h5>DIVE TIME<h5>
		<h1><%= entry.escape("divetime") %></h1>
	</div>
</div>

<% if (entry.images().length > 0) { %>
<div class="row entdiv">
	<h2>Images</h2>
</div>
<div class="row">
	<div class="col-xs-12" id="images-container">
	</div>
</div>
<% } %>
<div class="row entdiv" id="show-foot">
	<div id="footer-spacer">
		<h1></h1>
	</div>
</div>